---
import fs from 'node:fs';

const title = 'How many days since Michigan has beaten Ohio State?';
const description = 'A proudly Buckeye-forward site tracking the days since Michigan last beat Ohio State. Go Bucks!';
const siteUrl = 'https://howmanydayssincemichiganbeatohiostate.com';
const ogImage = `${siteUrl}/home.png`;

const MS_PER_DAY = 24 * 60 * 60 * 1000;
const referenceDate = new Date(import.meta.env.REFERENCE_DATE);
const gaMeasurementId = import.meta.env.GA_MEASUREMENT_ID;
const imageRotationInterval = parseInt(import.meta.env.IMAGE_ROTATION_INTERVAL);
const buildNow = new Date();
const daysSince = Math.max(
  Math.floor((buildNow.getTime() - referenceDate.getTime()) / MS_PER_DAY),
  0
);

const easternFormatter = new Intl.DateTimeFormat('en-US', {
  timeZone: 'America/New_York',
  hour: 'numeric',
  minute: '2-digit',
});
const formattedTime = easternFormatter.format(buildNow);

const imageDirectory = new URL('../../public/images/', import.meta.url);
const imageFiles = fs
  .readdirSync(imageDirectory)
  .filter((file: string) => file.match(/\.(gif|jpe?g|png)$/i));
const initialImage = imageFiles[0] ?? '';
const imageListJSON = JSON.stringify(imageFiles);
const referenceDateString = import.meta.env.REFERENCE_DATE;
const imageRotationIntervalString = imageRotationInterval.toString();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/reset.css?v=3" />
    <link rel="stylesheet" href="/style.css?v=3" />
    
    {gaMeasurementId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
        <script is:inline define:vars={{ gaMeasurementId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaMeasurementId);
        </script>
      </>
    )}
  </head>
  <body>
    <h1>{title}</h1>
    <div id="content">
      <p id="days_since"><span id="days_count">{daysSince}</span> days.</p>
      <p id="logo">
        {initialImage ? (
          <img
            id="logo-image"
            src={`/images/${initialImage}`}
            alt="Celebratory Buckeye"
            loading="lazy"
          />
        ) : (
          ''
        )}
      </p>
      <p id="phrase">
        It's <span id="time">{formattedTime}</span> in Columbus and Michigan still sucks.
      </p>
    </div>
    
    <nav id="bottom-nav">
      <a href="/mo-carmen">Who is Mo Carmen?!</a>
      <a href="/rivalry">The Rivalry Stats</a>
    </nav>
    
    <div id="footer">
      an <a href="https://jschairb.dev">@<span class="danzig">jschairb</span></a> joint
    </div>
    <script type="module" define:vars={{ imageListJSON, referenceDateString, imageRotationIntervalString }}>
      const targetDate = new Date(referenceDateString);
      const msPerDay = 24 * 60 * 60 * 1000;
      const images = JSON.parse(imageListJSON);
      const rotationInterval = parseInt(imageRotationIntervalString);

      const formatEasternTime = (date) =>
        new Intl.DateTimeFormat('en-US', {
          timeZone: 'America/New_York',
          hour: 'numeric',
          minute: '2-digit',
        }).format(date);

      const updateMetrics = () => {
        const now = new Date();
        const diffInDays = Math.max(
          Math.floor((now.getTime() - targetDate.getTime()) / msPerDay),
          0
        );

        const daysCount = document.getElementById('days_count');
        const timeEl = document.getElementById('time');

        if (daysCount) {
          daysCount.textContent = diffInDays.toString();
        }

        if (timeEl) {
          timeEl.textContent = formatEasternTime(now);
        }
      };

      document.addEventListener('DOMContentLoaded', () => {
        const imageEl = document.getElementById('logo-image');
        let currentImageIndex = 0;
        
        if (imageEl && images.length > 0) {
          // Start with a random image
          currentImageIndex = Math.floor(Math.random() * images.length);
          imageEl.src = `/images/${images[currentImageIndex]}`;
          
          // Rotate through images at configured interval
          setInterval(() => {
            currentImageIndex = (currentImageIndex + 1) % images.length;
            imageEl.src = `/images/${images[currentImageIndex]}`;
          }, rotationInterval);
        }

        updateMetrics();
        setInterval(updateMetrics, 60 * 1000);
      });
    </script>
    <script>
      import { emojiBlast } from 'emoji-blast';
      
      // TEST: Force position to far left to verify it's working
      document.addEventListener('click', (event) => {
        emojiBlast({
          emojiCount: 20,
          emojis: ["üÖæÔ∏è"],
          position: {
            x: 50,
            y: event.clientY
          }
        });
      });
    </script>
  </body>
</html>

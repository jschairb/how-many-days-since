          <p style="margin: 0 0 0.5rem; font-size: 0.85rem; color: #666; font-weight: bold; text-transform: uppercase; letter-spacing: 0.5px;">Special Offer</p>
          <p style="margin: 0 0 0.25rem; font-size: 1.25rem; font-weight: bold; color: #BE2137;">20% OFF</p>
          <p style="margin: 0; font-size: 0.9rem; color: #333;">Use code: <span style="font-family: monospace; background: #f0f0f0; padding: 0.25rem 0.5rem; border-radius: 4px; font-weight: bold; color: #BE2137;">HMDSMHBOS25</span></p>
        </div>
        <span style="display: inline-block; padding: 0.75rem 2rem; background: #BE2137; color: white; border-radius: 6px; font-weight: bold; font-size: 1.1rem;">
          Shop Now ‚Ä¢ Free US Shipping
        </span>
      </a>
    </div>
    
    <nav id="bottom-nav">
      <a href="/rivalry">The Rivalry Stats</a>
      <a href="/mo-carmen">Who is Mo Carmen?!</a>
    </nav>
    
    <div id="footer">
      an <a href="https://jschairb.dev">@<span class="danzig">jschairb</span></a> joint
    </div>
    <script type="module" define:vars={{ imageListJSON, referenceDateString, imageRotationIntervalString }}>
      const targetDate = new Date(referenceDateString);
      const msPerDay = 24 * 60 * 60 * 1000;
      const images = JSON.parse(imageListJSON);
      const rotationInterval = parseInt(imageRotationIntervalString);

      const formatEasternTime = (date) =>
        new Intl.DateTimeFormat('en-US', {
          timeZone: 'America/New_York',
          hour: 'numeric',
          minute: '2-digit',
        }).format(date);

      const updateMetrics = () => {
        const now = new Date();
        const diffInDays = Math.max(
          Math.floor((now.getTime() - targetDate.getTime()) / msPerDay),
          0
        );

        const daysCount = document.getElementById('days_count');
        const timeEl = document.getElementById('time');

        if (daysCount) {
          daysCount.textContent = diffInDays.toString();
        }

        if (timeEl) {
          timeEl.textContent = formatEasternTime(now);
        }
      };

      // Copy product link function
      window.copyProductLink = async function() {
        const url = window.location.origin + '/#script-in-the-snow';
        try {
          await navigator.clipboard.writeText(url);
          const btn = document.getElementById('copy-link-btn');
          btn.style.background = '#BE2137';
          btn.querySelector('svg').setAttribute('stroke', 'white');
          setTimeout(() => {
            btn.style.background = 'white';
            btn.querySelector('svg').setAttribute('stroke', '#BE2137');
          }, 1000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      };

      document.addEventListener('DOMContentLoaded', () => {
        const imageEl = document.getElementById('logo-image');
        let currentImageIndex = 0;
        
        if (imageEl && images.length > 0) {
          // Start with a random image
          currentImageIndex = Math.floor(Math.random() * images.length);
          imageEl.src = `/images/${images[currentImageIndex]}`;
          
          // Rotate through images at configured interval
          setInterval(() => {
            currentImageIndex = (currentImageIndex + 1) % images.length;
            imageEl.src = `/images/${images[currentImageIndex]}`;
          }, rotationInterval);
        }

        updateMetrics();
        setInterval(updateMetrics, 60 * 1000);
      });
    </script>
    <script>
      import { emojiBlast } from 'emoji-blast';
      
      // TEST: Force position to far left to verify it's working
      document.addEventListener('click', (event) => {
        emojiBlast({
          emojiCount: 20,
          emojis: ["üÖæÔ∏è"],
          position: {
            x: 50,
            y: event.clientY
          }
        });
      });
    </script>
  </body>
</html>

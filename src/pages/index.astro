---
import fs from 'node:fs';

const title = 'How many days since Michigan has beaten Ohio State?';
const description = 'A proudly Buckeye-forward site tracking the days since Michigan last beat Ohio State in The Game. Celebrating Buckeye dominance in college football\'s greatest rivalry. Go Bucks!';
const siteUrl = 'https://howmanydayssincemichiganhasbeatenohiostate.com';
const ogImage = `${siteUrl}/home.png`;

const MS_PER_DAY = 24 * 60 * 60 * 1000;
const referenceDate = new Date(import.meta.env.REFERENCE_DATE);
const gaMeasurementId = import.meta.env.GA_MEASUREMENT_ID;
const imageRotationInterval = parseInt(import.meta.env.IMAGE_ROTATION_INTERVAL);
const buildNow = new Date();
const daysSince = Math.max(
  Math.floor((buildNow.getTime() - referenceDate.getTime()) / MS_PER_DAY),
  0
);

const easternFormatter = new Intl.DateTimeFormat('en-US', {
  timeZone: 'America/New_York',
  hour: 'numeric',
  minute: '2-digit',
});
const formattedTime = easternFormatter.format(buildNow);

const imageDirectory = new URL('../../public/images/', import.meta.url);
const imageFiles = fs
  .readdirSync(imageDirectory)
  .filter((file: string) => file.match(/\.(gif|jpe?g|png)$/i));
const initialImage = imageFiles[0] ?? '';
const imageListJSON = JSON.stringify(imageFiles);
const referenceDateString = import.meta.env.REFERENCE_DATE;
const imageRotationIntervalString = imageRotationInterval.toString();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/reset.css?v=3" />
    <link rel="stylesheet" href="/style.css?v=3" />
    <style>
      @font-face {
        font-family: 'Antique Olive Nord';
        src: url('/fonts/Antique%20Olive%20Nord%20D%20Regular.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
    
    {gaMeasurementId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
        <script is:inline define:vars={{ gaMeasurementId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaMeasurementId);
        </script>
      </>
    )}
  </head>
  <body>
    <h1>{title}</h1>
    <div id="content">
      <p id="days_since"><span id="days_count">{daysSince}</span> days.</p>
      <p id="logo">
        {initialImage ? (
          <img
            id="logo-image"
            src={`/images/${initialImage}`}
            alt="Celebratory Buckeye"
            loading="lazy"
          />
        ) : (
          ''
        )}
      </p>
      <p id="phrase">
        It's <span id="time">{formattedTime}</span> in Columbus and Michigan still sucks.
      </p>
    </div>
    
    <div id="script-in-the-snow" style="max-width: 640px; margin: 2rem auto; padding: 0 1rem; position: relative;">
      <button id="copy-link-btn" onclick="copyProductLink()" style="position: absolute; top: 1.5rem; right: 2.5rem; background: white; border: 2px solid #BE2137; border-radius: 50%; width: 40px; height: 40px; cursor: pointer; display: flex; align-items: center; justify-content: center; z-index: 10; transition: all 0.2s;" title="Copy link to share">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#BE2137" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
        </svg>
      </button>
      <a href="https://gwpworkshop.com/products/script-in-the-snow-the-2025-rivalry-game-commemorative-tee" style="display: block; text-decoration: none; color: inherit; background: #f5f5f5; border: 2px solid #ddd; border-radius: 12px; padding: 2rem; text-align: center; transition: transform 0.2s, box-shadow 0.2s;">
        <div style="display: inline-block; background: #BE2137; color: white; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.75rem; font-weight: bold; margin-bottom: 1rem; letter-spacing: 0.5px;">NEW DESIGN</div>
        <img src="/images/products/script-in-the-snow.jpg" alt="Script in the Snow T-Shirt" style="width: 100%; max-width: 350px; margin: 0 auto 1.5rem; display: block; border-radius: 8px;" />
        <h2 style="color: #b0b7bc; margin: 0 0 0.25rem; font-size: 1.5rem; font-family: 'Antique Olive Nord', Arial, sans-serif; -webkit-text-stroke: 1px black; text-stroke: 1px black; text-shadow: 3px 3px 0 black;">Script in the Snow T-Shirt</h2>
